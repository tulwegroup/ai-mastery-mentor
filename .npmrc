# --- Professional AI Mastery Mentor: NPM Configuration ---

# Enforce strict Node.js and npm version checks to prevent "it works on my machine" issues
engine-strict=true

# Progress bar can slow down CI/CD builds; set to false for cleaner logs
progress=false

# Keep log levels concise
loglevel=notice

# Prefer offline packages if they exist in the cache to speed up repeated installs
prefer-offline=true

# Ensure peer dependencies are automatically installed (npm 7+)
install-links=true

# Save exact versions by default to ensure environment parity
save-exact=true

# For projects using pnpm (highly recommended for this stack):
# public-hoist-pattern[]=*
